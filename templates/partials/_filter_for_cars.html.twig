<h1 class="headline-text">Voici nos véhicules à la vente</h1>
{{ form_start(form) }}
<div class="filter-container">
<div class="row">
<div class="col-md-4">
    {{ form_row(form.minPrice) }}
    {{ form_row(form.maxPrice) }}
</div>

<div class="col-md-4">
    {{ form_row(form.minYear) }}
    {{ form_row(form.maxYear) }}
</div>

<div class="col-md-4">
    {{ form_row(form.minKm) }}
    {{ form_row(form.maxKm) }}
</div>
</div>
<button type="submit" class="button">Filtrer</button>
<button type="reset" class="button">Réinitialiser</button>
</div>
{{ form_end(form) }}
