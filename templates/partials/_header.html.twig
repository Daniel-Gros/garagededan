<header>
	<div class="row">
		<nav class="navbar navbar-expand-md navbar-light bg-light ">
			<a href="{{ path('app_home') }}">
				<img class="logo" src="{{ asset('build/img/various/logo.png') }}" alt="logo du garage" height="40">
			</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse justify-content-end" id="navbarNav">
				<ul class="navbar-nav ml-auto gap-3">
					<li class="nav-item">
						<a class="link" href="{{ path('app_home') }}">Accueil</a>
					</li>
					<li class="nav-item">
						<a class="link" href="{{ path('app_showcar')}}">Véhicules</a>
					</li>
					<li class="nav-item">
						<a class="link" href="{{ path('app_showservice')}}">Services</a>
					</li>
					<li class="nav-item">
						<a class="link" href="{{path('app_contact')}}">Contact</a>
					</li>
					<li class="nav-item">
						<a class="link" href="{{ path('app_review_new') }}">Laisser un avis</a>
					</li>
					{% if is_granted('ROLE_ADMIN') %}
						<li class="nav-item">
							<a class="link" href="{{ path('admin') }}">Admin</a>
						</li>
					{% elseif is_granted('ROLE_USER') %}
						<li class="nav-item">
							<a class="link" href="{{ path('employeeadmin') }}">Admin</a>
						</li>
					{% endif %}
					{% if not is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN') %}
						<li class="nav-item">
							<a class="button" href="{{ path('app_login') }}">Connexion</a>
						</li>
					{% else %}
						<li class="nav-item">
							<a class="button" href="{{ path('app_logout') }}">Déconnexion</a>
