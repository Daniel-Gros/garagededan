{% extends 'base.html.twig' %}

{% block title %}OpeningHours index{% endblock %}

{% block body %}
    <h1>OpeningHours index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Day</th>
                <th>Open_time_am</th>
                <th>Close_time_am</th>
                <th>Open_time_pm</th>
                <th>Close_time_pm</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for opening_hour in opening_hours %}
            <tr>
                <td>{{ opening_hour.id }}</td>
                <td>{{ opening_hour.day }}</td>
                <td>{{ opening_hour.openTimeAm ? opening_hour.openTimeAm|date('H:i:s') : '' }}</td>
                <td>{{ opening_hour.closeTimeAm ? opening_hour.closeTimeAm|date('H:i:s') : '' }}</td>
                <td>{{ opening_hour.openTimePm ? opening_hour.openTimePm|date('H:i:s') : '' }}</td>
                <td>{{ opening_hour.closeTimePm ? opening_hour.closeTimePm|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_opening_hours_show', {'id': opening_hour.id}) }}">show</a>
                    <a href="{{ path('app_opening_hours_edit', {'id': opening_hour.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_opening_hours_new') }}">Create new</a>
{% endblock %}
