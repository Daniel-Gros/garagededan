{% extends 'base.html.twig' %}

{% block title %}OpeningHours{% endblock %}

{% block body %}
    <h1>Horaires d'ouverture</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ opening_hour.id }}</td>
            <tr>
                <th>Open_time_am</th>
                <td>{{ opening_hour.openTimeAm ? opening_hour.openTimeAm|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Close_time_am</th>
                <td>{{ opening_hour.closeTimeAm ? opening_hour.closeTimeAm|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Open_time_pm</th>
                <td>{{ opening_hour.openTimePm ? opening_hour.openTimePm|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Close_time_pm</th>
                <td>{{ opening_hour.closeTimePm ? opening_hour.closeTimePm|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="admin-panel">
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_opening_hours_new') }}">create new</a>
    {% endif %}
    <a href="{{ path('app_opening_hours_index') }}">back to list</a>

    <a href="{{ path('app_opening_hours_edit', {'id': opening_hour.id}) }}">edit</a>

    {{ include('opening_hours/_delete_form.html.twig') }}
    </div>
{% endblock %}
